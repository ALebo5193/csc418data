<div class="container">
    <h1>Users List</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Gender</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((user) => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.gender %></td>
                    <td>
                        <form action="/edit-user/<%= user._id %>" method="GET" style="display:inline;">
                            <button type="submit" class="btn btn-warning">Edit</button>
                        </form>

                        <form action="/users/<%= user._id %>/delete" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger">X</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
