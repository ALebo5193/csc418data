<div class="container">
    <h1>Users List</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Gender</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.gender %></td>
                    <td>
                        <a href="/users/<%= user._id %>" class="btn btn-info">View</a>
                        <a href="/users/<%= user._id %>/edit" class="btn btn-primary">Edit</a>
                        <form action="/api/users/<%= user._id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
