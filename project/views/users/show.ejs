<div class="container">
    <h1>User Details</h1>
    <div id="userDetails">
        <p><strong>Name:</strong> <%= user.name %></p>
        <p><strong>Gender:</strong> <%= user.gender %></p>
        <!-- Add any other user properties here, e.g., email, points, etc. -->
    </div>
    <br>
    <a href="/users/<%= user._id %>/edit" class="btn btn-primary">Edit</a>
    <form action="/api/users/<%= user._id %>?_method=DELETE" method="POST" style="display:inline;">
        <button type="submit" class="btn btn-danger" id="deleteUserBtn">Delete</button>
    </form>
    <a href="/users" class="btn btn-secondary">Back to Users List</a>
</div>
